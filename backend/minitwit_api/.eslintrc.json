{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "ignorePatterns": ["node_modules/"],
    "rules": {
        "no-extra-boolean-cast": [
            "off"
        ],
        "no-undef": [
            "off"
        ]
    }
}